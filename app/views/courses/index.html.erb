<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Weekday1</th>
      <th>Weekday2</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Coursecode</th>
      <th>Capacity</th>
      <th>Wlcapacity</th>
      <th>Status</th>
      <th>Roomnumber</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.weekday1 %></td>
        <td><%= course.weekday2 %></td>
        <td><%= course.startTime %></td>
        <td><%= course.endTime %></td>
        <td><%= course.courseCode %></td>
        <td><%= course.capacity %></td>
        <td><%= course.wlCapacity %></td>
        <td><%= course.status %></td>
        <td><%= course.roomNumber %></td>
        <td><%= course.instructor_id %></td>
        <% if current_user.role == "Instructor" ||  current_user.role == "Admin" %>
          <td> <%= link_to 'View Students', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <% puts "checking" %>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%elsif  current_user.role == "Student" %>
          <td> <%= link_to 'Enroll', new_enrollment_path(:course_id => course.id) %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
