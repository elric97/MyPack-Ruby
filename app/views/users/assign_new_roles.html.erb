<p id="notice"><%= notice %></p>

<h1>Assign Roles</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Select a Role</th>
    <th>Delete</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Student", new_student_path(:user_id => user.id) %>
        <%= link_to "Instructor", new_instructor_path(:user_id => user.id) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>